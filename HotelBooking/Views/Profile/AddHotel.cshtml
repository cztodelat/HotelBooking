@model AddHotelViewModel

@{
    ViewData["Title"] = "Add Hotel";
}

<div class="row">
    <div class="col-3">
        <partial name="_SidebarMenuPartial" />
    </div>
    <div class="col-9">
        @*To support file upload set the form element enctype="multipart/form-data" *@
        <form enctype="multipart/form-data" asp-controller="Profile" asp-action="AddHotel" method="post" class="mt-3">
            <div class="row mb-3">
                <label asp-for="HotelName" class="col-sm-2 col-form-label">Hotel name : </label>
                <div class="col-sm-10">
                    <input asp-for="HotelName" class="form-control" />
                    <span asp-validation-for="HotelName"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="HotelCountryId" class="col-sm-2 col-form-label">Country : </label>
                <div class="col-sm-10">
                    <select asp-for="HotelCountryId" asp-items="@(new SelectList(Model.Countries, "CountryId", "CountryName"))" class="form-select">
                        <option value="value">Pleace select</option>
                    </select>
                    <span asp-validation-for="HotelCountryId"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="HotelCity" class="col-sm-2 col-form-label">City : </label>
                <div class="col-sm-10">
                    <input asp-for="HotelCity" class="form-control" />
                    <span asp-validation-for="HotelCity"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="HotelAddress" class="col-sm-2 col-form-label">Adress : </label>
                <div class="col-sm-10">
                    <input asp-for="HotelAddress" class="form-control" />
                    <span asp-validation-for="HotelAddress"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="HotelDescription" class="col-sm-2 col-form-label">Description : </label>
                <div class="col-sm-10">
                    <input asp-for="HotelDescription" class="form-control" />
                    <span asp-validation-for="HotelDescription"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Photo" class="col-sm-2 col-form-label">Photo : </label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input" required/>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-10">
                    @*При клике на кнопку в форме у которой type="submit", все данные отправляются на ссылку указанную в <form action"/"> *@
                    <button type="submit" class="btn btn-primary"> Create </button>
                </div>
            </div>
        </form>
    </div>
</div>
