@model BookViewModel

<div class="room-choise">
    <h4 class="margin-b-sm">Please choose the date and rooms!</h4>

    <form class="book-room-form" method="post" asp-action="Book" asp-controller="Profile">
        <input asp-for="@Model.HotelId" hidden />

        <div class="row margin-b-md">
            <div class="col-md-6">
                <label class="book-room-form__label" asp-for="DateFrom">From: </label>
                <input class="book-room-form__date" asp-for="DateFrom"/>
                <span class="validation" asp-validation-for="DateFrom"></span>
            </div>
            <div class="col-md-6">
                <label class="book-room-form__label" asp-for="DateTo">To: </label>
                <input class="book-room-form__date" asp-for="DateTo"/>
                <span class="validation" asp-validation-for="DateTo"></span>
            </div>
        </div>

        @for (int i = 0; i < Model.Rooms.Count; i++)
        {
            <div class="row">
                <div class="col-12">
                    <input asp-for="@Model.Rooms[i].RoomId" hidden />

                    <div class="room margin-b-md">
                        <div class="room__checkbox-wrapper">
                            <input asp-for="@Model.Rooms[i].RoomStatus.IsRoomOccupied" />
                        </div>
                        <div class="card card_checkbox">
                            <div class="row">
                                <div class="col-md-4">
                                    <ul class="room__list">
                                        <li class="room__list-item">Room number : @Model.Rooms[i].RoomNumber</li>
                                        <li class="room__list-item">Floor : @Model.Rooms[i].Floor</li>
                                        <li class="room__list-item">Price : @Model.Rooms[i].RoomPrice</li>
                                        <li class="room__list-item">Status : @Model.Rooms[i].RoomStatus.StatusName</li>
                                    </ul>
                                </div>
                                <div class="col-md-8">
                                    <div class="room__description-body">
                                        <h5>Description</h5>
                                        <p class="room__description">@Model.Rooms[i].Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="book-room-form__footer">
            <button type="submit" class="btn btn-success">Book</button>
        </div>
    </form>
</div>

