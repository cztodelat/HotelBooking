@model RegisterViewModel

@{
    ViewData["Title"] = "Registration";
}

<section class="registration">
    <div class="container">
        <h1 class="page-title margin-b-md">User Registration</h1>

        <div class="row">
            <div class="col-12">
                <form class="register-account-form" method="post" enctype="multipart/form-data" asp-action="Register" asp-controller="Account">
                    <div class="register-account-form__summary" asp-validation-summary="All"></div>

                    <div class="row">
                        <div class="col-6">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="Name">Name: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="Name" />
                                    <span class="validation" asp-validation-for="Name"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="Surname">Surname: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="Surname" />
                                    <span class="validation" asp-validation-for="Surname"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="Email">Email: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="Email" />
                                    <span class="validation" asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="Photo">Profile photo: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="Photo" />
                                    <span class="validation" asp-validation-for="Photo"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="Password">Password: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="Password" />
                                    <span class="validation" asp-validation-for="Password"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="ConfirmPassword">Confirm password: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="ConfirmPassword" />
                                    <span class="validation" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn">Register</button>
                </form>
            </div>
        </div>
    </div>
</section>