@model ResetPasswordViewModel

@{ 
    ViewData["Title"] = "Reset password";
}


<section class="reset-password">
    <div class="container">
        <h2 class="page-title margin-b-md">Reset password</h2>

        <div class="row">
            <div class="col-12">
                <form class="reset-password-form" asp-controller="Account" asp-action="ResetPassword" method="post">
                    <input asp-for="Email" hidden />
                    <input asp-for="Token" hidden />

                    <div class="margin-b-md row">
                        <div class="col-12">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="Password">Password: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="Password" />
                                    <span class="validation" asp-validation-for="Password"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="margin-b-md row">
                        <div class="col-12">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="ConfirmPassword">Confirm password: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="ConfirmPassword" />
                                    <span class="validation" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn">Reset</button>
                </form>
            </div>
        </div>
    </div>
</section>