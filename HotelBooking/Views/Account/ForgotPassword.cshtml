@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Restore password";
}

<div class="restore-password">
    <div class="container">
        <h1 class="page-title margin-b-md">Restore password</h1>

        <div class="row">
            <div class="col-md-12">
                <form class="restore-password-form" asp-action="ForgotPassword" asp-controller="Account" method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="input-box input-box_margin-b-md">
                                <label class="input-box__label" asp-for="Email">Email: </label>
                                <div class="input-box__field-wrapper">
                                    <input class="input-box__field" asp-for="Email" />
                                    <span class="validation" asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
